<div class="index-container">
  <div class="index-container__header">
    <LinkTo @route="index" class="selectable" @activeClass="">
      <h1 class="index__title">
        Splanky
      </h1>
    </LinkTo>

    <h2 class="index__subtitle">
      a social graph of NYC jazz musicians.
    </h2>

    <div class="nav">
      <div class="nav-item">
        <PowerSelect
          @options={{years}}
          @searchEnabled={{false}}
          @selected={{year}}
          @onchange={{action "changeYear"}} as |value|
        >
          {{value}}
        </PowerSelect>
      </div>

      <div class="nav-item">
        <PowerSelect
          @options={{months}}
          @searchEnabled={{false}}
          @selected={{selectedMonth}}
          @onchange={{action "changeMonth"}} as |value|
        >
          {{value.name}}
        </PowerSelect>
      </div>

      <LinkTo @route="index" class="selectable nav-item {{if this.isGraphRoute "active"}}">
        Monthly graph
      </LinkTo>
      <LinkTo @route="stats" class="selectable nav-item">
        Most popular
      </LinkTo>
      <LinkTo @route="about" class="selectable nav-item">
        About
      </LinkTo>
    </div>
  </div>
  <div class="index-container__graph-viewport">
    {{outlet}}
  </div>
</div>
